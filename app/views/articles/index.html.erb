<div class="main-grid">

  <% featured_img = featured_article.image %>
  <div class="featured" style= "background: url(<%= featured_img %>) no-repeat center center/cover" >
    <a href=<%= articles_path(featured_article.id) %> class="featured-link"></a>
    <span class="featured-title font-chivo"><%= featured_article.title %></span>
  </div>

  
  <% Category.includes(:articles).all.order(priority: 'DESC').each do |category| %>
   
    <div class="category">
      <img src=<%= category_last(category.articles).image %> alt="img" class="category-img">
      <a href=<%= category_path(category.id) %> class="category-link"></a>
      <span class="category-name font-chivo"><%= category.name %></span>
      <a class="category-last-article font-chivo"<%= category_last(category.articles).title %>></a>
    </div>
  <% end %>

</div>