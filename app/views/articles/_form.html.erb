<div class="d-flex align-items-start">
  <%= form_with(model: article, local: true) do |form| %>
    <% if article.errors.any? %>
      <div id="error_explanation">
  
        <ul>
          <% article.errors.full_messages.each do |message| %>
            <li class="text-danger"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <%= form.label :category_id %>
      <%= form.collection_select(:category_id, Category.all, :id, :name, { promt: 'Please select the category of the meal'}, { class: 'form-control' })%>
    </div>
  
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_area :title, class: 'form-control'%>
    </div>
  
    <div class="form-group">
      <%= form.label :text %>
      <%= form.text_area :text, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= form.label :image %>
      <%= form.file_field :image, class: 'form-control-file' %>
    </div>
  
    <div class="actions">
      <button type="submit" class="btn btn-success btn-block mb-2">Publish</button>
    </div>
  <% end %>
</div>
